<table class="profile">
  <tr>
    <td class="main">
      <h2>
        <%= gravatar @user.email %>
        <%= h @user.name %>
      </h2>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= link_to h(@user.name), @user %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %>
    </td>

  </tr>



</table>