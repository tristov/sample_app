<tr>
  <td class="micropost">
    <span class="content"><%= display(micropost.content) %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(micropost.user) %>
  <td>
    <%= link_to t(:delete), micropost, :method => :delete,
                                     :confirm => t(:you_sure) %>
  </td>
  <% end %>
</tr>
